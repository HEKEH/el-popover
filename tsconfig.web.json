{
  "extends": ["./tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "include": ["packages"],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/__tests__/**",
    "**/test-helper/**",
    "packages/test-utils/**",
    "**/*.md",
    "**/vite.config.*",
    "**/vitest.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["vue", "unplugin-vue-macros/macros-global"],
    "skipLibCheck": true
  }
}
